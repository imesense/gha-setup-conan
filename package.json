{
  "name": "gha-setup-conan",
  "version": "0.1.0",
  "description": "Action for installing and configuring Conan package manager to PATH of the runner",
  "author": "acidicMercury8",
  "license": "MIT",
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript"
  ],
  "scripts": {
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "pack": "npx ncc build src/index.js -o dist --source-map --license licenses.txt",
    "pack:watch": "npm run package -- --watch"
  },
  "homepage": "https://github.com/imesense/gha-setup-ninja#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imesense/gha-setup-ninja.git"
  },
  "bugs": {
    "url": "https://github.com/imesense/gha-setup-ninja/issues"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.1",
    "eslint": "^9.5.0",
    "prettier": "^3.3.2",
    "prettier-plugin-brace-style": "^0.6.2"
  }
}
